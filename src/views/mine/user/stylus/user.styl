//用户店铺信息
.user-info-wrap{
  ft(30)
  >li{
    padding 24px
    flex-center()
    bg(#fff)
    >div:first-child{
      c-6()
      w(150)
      word-break keep-all
    }
    >div:last-child{
      c-3()
      flex-1()
      ml(10)
    }
  }
  .uiw-info,.uiw-pic{
    align-items flex-start
  }
}
.user-info-edit{
  width 100%
  lh(98)
  position fixed
  left 0
  bottom 0
  c(#FF5638)
  ft(32)
  bg(#fff)
  text-c()
}
.mb-20{
  mb(20)
}


//用户邀请码页面
.invite-code-wrap{
  margin 24px
  bg(#fff)
  .profile-photo{
    flex()
    align-items center
    img{
      w(120)
      h(120)
      border-radius 10px
      margin 60px 30px 60px 60px
    }
    span{
      ft(36)
      c-3()
    }
  }
  .profile-code{
    w(500)
    h(500)
    margin 0 auto
    img{
      width 100%
      height 100%
    }
  }
}