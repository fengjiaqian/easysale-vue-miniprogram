.top-bar{
  bg(#fff)
  border-bottom 1PX solid #EDEDED
  flex-center()
  width 100%
  h(98)
  box-sizing border-box
  position fixed
  left 0
  top 0
  span{
    width 25%
    text-c()
    lh(98)
    c-6()
    ft(28)
  }
  .active{
    font-weight 600
    ft(34)
    c-3()
    position relative
    &:before{
      content ""
      position absolute
      left 50%
      bottom 0
      transform translateX(-50%)
      w(40)
      h(6)
      bg(#FF5638)
    }
  }
}

.quanty-total{
  margin 20px 16px 0 16px
  padding 40px 0
  border-radius 2px
  bg(#fff)
  flex-center()
  c-6()
  ft(28)
  li{
    width 50%
    flex-center()
    flex-direction column
    h5{
      font-weight 600
      ft(48)
      mb(24)
    }
  }
  .qt-money{
    h5{
      c(#FF5638)
    }
  }
  .qt-num{
    h5{
      c(#333)
    }
  }
}
.classes-column{
  margin 20px 16px 0 16px
  border-radius 2px
  ft(30)
  c-6()
  bg(#fff)
  li{
    lh(90)
    flex-center()
    padding 0 52px 0 24px
    >span:first-child{
      flex-1()
    }
  }
}

.content-wrap{
  width 100%
  mt(98)
  inline()
  position relative
  bg(#fff)
  .adsorb-bar{
    flex-center()
    lh(94)
    border-bottom 1PX solid #EDEDED
    ft(28)
    c-3()
    padding 0 24px
    .ab-l{
      width 50%
    }
    .ab-m,.ab-r{
      width 25%
      text-align right
      span{
        inline()
        w(22)
        h(28)
        mr(8)
        background-image url(../../../assets/images/icon_sort1.png)
        background-size contain
        background-repeat no-repeat
        background-position center
      }
    }
  }
  .list{
    margin 0 24px
    li{
      lh(84)
      flex-center()
      border-bottom 1PX solid #EDEDED
      ft(26)
      c-6()
      >div{
        width 25%
        text-align right
      }
      >div:first-child{
        width 50%
        text-align left
        text-overflow-1()
      }
    }
  }
}
