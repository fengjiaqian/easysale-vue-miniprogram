//陈列管理列表
.exhibit-content{
  padding 110px 0 118px
  width 100%
  height 100%
}
.exhibit-list-scroll{
  width 100%
  height 100%
}
.exhibit-list{

  li{
    bg(#fff)
    mb(20)
  }
  .el-t{
    padding 24px 0 0 24px
    flex()
    align-content center
    justify-content space-between
    .title{
      flex()
      flex-direction column
      h5{
        ft(32)
        c-3()
        font-weight 600
      }
      span{
        mt(6)
        ft(24)
        c-9()
      }
    }
    .tag{
      h(60)
      lh(60)
      bg(#FFF2D7)
      border-radius:100px 0px 0px 100px;
      ft(26)
      c(#D08C02)
      padding 0 24px
      &.end{
        bg(#F6F6F6)
        c-9()
      }
    }
  }
  .el-m{
    padding 24px
    ft(28)
    border-bottom 1px solid #EDEDED
    p{
      ft(28)
      c-6()
      text-overflow-2()
      line-height 1.5
    }
    .apply-info{
      mt(10)
      c(#FF5638)
    }
  }
  .el-b{
    padding 26px 0
    flex-center()
    span{
      flex-center()
      width 50%
      text-c()
      ft(28)
      c-6()
      position relative
      &:nth-of-type(2):before{
        content ""
        position absolute
        left 0
        top 0
        w(1)
        h(40)
        bg(#EDEDED)
      }
      i{
        ft(26)
        c(#fff)
        bg(#FF5638)
        h(32)
        w(32)
        border-radius 50%
        ml(10)
      }
    }
  }
}
.exhibit-footer{
  position fixed
  left 0
  bottom 0
  bg(#fff)
  width 100%
  lh(98)
  ft(32)
  c(#FF5638)
  text-c()
  z-index 2
}



