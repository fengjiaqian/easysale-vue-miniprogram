//陈列情况列表
.exhibit-state-wrap{
  height 100%
  .exhibit-state-content{
    pt(180)
    height 100%
    .exhibit-state-scroll{
      height 100%
    }
  }
  .top-bar{
    bg(#fff)
    border-bottom 1PX solid #EDEDED
    flex-center()
    width 100%
    h(98)
    box-sizing border-box
    position fixed
    left 0
    top 90px
    z-index 2
    span{
      width 25%
      text-c()
      lh(98)
      c-6()
      ft(28)
    }
    .active{
      font-weight 600
      ft(34)
      c-3()
      position relative
      &:before{
        content ""
        position absolute
        left 50%
        bottom 0
        transform translateX(-50%)
        w(40)
        h(6)
        bg(#FF5638)
      }
    }
  }
  .footer{
    position fixed
    left 0
    bottom 0
    width 100%
    h(98)
    bg(#fff)
    z-index 2
    padding 0 24px
    .oprate{
      mt(17)
      flex()
      align-content center
      justify-content space-between
      .all-select{
        flex-center()
        ft(30)
        c-3()
        i{
          mr(18)
        }
      }
      .agree{
        w(160)
        text-c()
        lh(64)
        bg(#FF5638)
        border-radius 8px
        ft(28)
        c(#fff)
      }
    }
  }

}



//陈列执行详情
.perform-wrap{
  .perform-title{
    ft(34)
    c-3()
    padding 16px 24px
    bg(#fff)
    font-weight 600
    p{
      ft(26)
      c-9()
      mt(8)
    }
    span{
      c(#FF5638)
    }
  }
  .et-content{
    padding 20px 16px 0
    mb(118)
    >li{
      bg(#fff)
      border-radius 2px
      mb(20)
      h5{
        margin 0 24px
        padding 24px 0
        ft(30)
        c-3()
        font-weight 600
        border-bottom 1px solid #EDEDED
      }
      .product{
        flex-center()
        flex-direction column
        img{
          margin 50px auto 35px
          w(170)
          h(170)
        }
        p{
          ft(30)
          c-3()
          font-weight 600
          mb(40)
        }
      }
      .require{
        padding 24px
        ft(30)
        c-6()
        .reward{
          mt(12)
        }
      }
      .t-content{
        padding 24px
        ft(30)
        c-6()
      }
      .customer-info{
        padding 24px
        ft(30)
        c-6()
        p{
          mb(8)
          position relative
          .tel{
            block();
            pos(absolute);
            bottom: 0;
            right: 0;
            squ(40);
            background: url('../../assets/images/icon-tel.png') no-repeat center;
            background-size: contain;
          }
        }
      }
    }
    .remark{
      h5{
        span{
          ml(8)
          c-9()
        }
      }
      textarea{
        padding 24px
        width 100%
      }
    }
    .perform-case{
      .pc-title{
        margin 0 24px
        padding 24px 0
        ft(30)
        c-3()
        border-bottom 1px solid #EDEDED
        flex()
        align-content center
        justify-content space-between
        span{
          font-weight 600
        }
        .detail{
          ft(26)
          c-9()
          font-weight normal
        }
      }
      .pc-content{
        padding 24px
        p{
          ft(30)
          c-3()
          i{
            c(#FF5638)
          }
        }
        .upload-column{
          .upload-column-list{
            margin 24px 0
            flex()
            flex-wrap wrap
            justify-content flex-start
            >li{
              position relative
              width 100%
              flex-center()
              img{
                margin 0 auto
                height 100%
                max-height 300px
                border-radius 10px
                border 1PX dashed #DDDDDD
                box-sizing border-box
              }
              i{
                position absolute
                right 8px
                top -20px
                w(40)
                h(40)
                background-image url(../../../assets/images/close_icon1.png)
                background-size contain
                background-repeat no-repeat
                background-position center
              }
            }
          }
          .upload-btn{
            bg(#BDBDBD)
            lh(88)
            border-radius 10px
            ft(32)
            c(#fff)
            text-c()
            letter-spacing 1.2
            &.achieve{
              bg(#FF5638)
            }
          }
        }
        .nper-column{
          flex()
          flex-wrap wrap
          padding 0 16px 24px
          span{
            w(84)
            h(84)
            lh(84)
            text-c()
            bg(#F6F6F6)
            mt(32)
            mr(50)
            ft(36)
            c-9()
            border-radius 50%
            position relative
            &:nth-child(5n+5){
             margin-right 0
            }
            i{
              position absolute
              right 0
              bottom 0
              w(32)
              h(32)
              background-image url(../../assets/images/success_exhibit_icon.png)
              background-size contain
              background-repeat no-repeat
              background-position center
              &.faild{
                background-image url(../../assets/images/faild_exhibit_icon.png)
              }
            }
          }
        }
        .scale-btn{
          text-c()
          ft(28)
          c(#0096FF)
        }
      }
    }
  }
  .et-footer{
    position fixed
    left 0
    bottom 0
    width 100%
    z-index 2
    bg(#fff)
    flex-center()
    lh(98)
    span {
      lh(98)
      text-c()
      width 50%
      ft(32)
      c-6()
      &.refuse{
        bg(#fff)
        c(#FF5638)
      }
      &.agree{
        bg(#FF5638)
        c(#fff)
      }
    }
    .ex-apply{
      width 100% !important
      bg(#FF5638)
      c(#fff)
    }
  }
}



