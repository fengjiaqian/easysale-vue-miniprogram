//新建陈列任务
.add-exhibit-task{
  .et-content{
    padding 20px 16px 0
    mb(118)
    >li{
      bg(#fff)
      border-radius 2px
      mb(20)
      h5{
        margin 0 24px
        padding 24px 0
        ft(30)
        border-bottom 1px solid #EDEDED
        flex()
        align-content center
        justify-content space-between
        .title{
          font-weight 600
          c-3()
        }
        .change{
          c(#FF5638)
        }
      }
      textarea{
        padding 24px
        ft(30)
        c-3()
        width 100%
      }
      .add-product{
        text-c()
        c(#FF5638)
        padding 32px 0
        ft(28)
      }
      .product{
        flex-center()
        flex-direction column
        img{
          margin 50px auto 35px
          w(170)
          h(170)
        }
        p{
          ft(30)
          c-3()
          font-weight 600
          mb(40)
        }
      }
      .require{
        padding 24px
        ft(30)
        c-6()
        .reward{
          mt(12)
        }
      }
      .t-content{
        padding 24px
        ft(30)
        c-6()
      }
    }
    .cycle{
      .cycle-column{
        padding 24px
        flex-center()
        c-3()
        ft(30)
        .title{
          flex-1()
          font-weight 600
        }
        input{
          w(180)
          text-align right
          mr(10)
        }
      }
    }
    .apply-date{
      flex-center()
      ft(30)
      c-3()
      padding 24px
      .title{
        font-weight 600
        flex-1()
      }
      .date-pick-wrap{
        w(300)
      }
      .extension{
        background-size contain
        background-repeat no-repeat
        background-position center
        w(16)
        h(26)
        background-image url(../../assets/images/icon-enter.png)
      }
    }
  }
  .et-footer{
    position fixed
    left 0
    bottom 0
    width 100%
    z-index 2
    bg(#BDBDBD)
    flex-center()
    lh(98)
    c(#fff)
    ft(32)
    text-c()
    &.achieve{
      bg(#FF5638)
    }
  }
}


