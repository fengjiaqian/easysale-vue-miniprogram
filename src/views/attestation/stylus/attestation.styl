.identity-wrap{
  bg(#fff)
  height 100%
  .att-content{
    margin 30px 48px 0
    .c-title{
      h4{
        ft(40)
        c-3()
        font-weight 600
      }
      p{
        ft(28)
        c-9()
        mt(8)
      }
    }
    .c-list{
      mt(40)
      li{
        mb(36)
        flex-center()
        h(120)
        bg(#F6F6F6)
        border-radius 4px
        span{
          w(184)
          h(120)
          background-size contain
          background-repeat no-repeat
          background-position center
          &.customer{
            background-image url(../../assets/images/attestation_icon1.png)
          }
          &.staff{
            background-image url(../../assets/images/attestation_icon2.png)
          }
          &.owner{
            background-image url(../../assets/images/attestation_icon3.png)
          }
          &.apply{
            background-image url(../../assets/images/attestation_icon4.png)
          }
        }
        h5{
          ft(32)
          c-3()
          font-weight 600
          ml(32)
          flex-1()
        }
        i{
          mr(30)
          w(36)
          h(36)
          background-size contain
          background-repeat no-repeat
          background-position center
          background-image url(../../assets/images/icon-header-back.png)
          transform rotate(180deg)
        }
      }
    }
  }
}

.att-wrap{
  bg(#fff)
  height 100%
  .att-content{
    margin 30px 48px 0
    .c-header{
      flex-center()
      h(120)
      >div{
        flex-1()
        h5{
          ft(40)
          c-3()
          font-weight 600
        }
        p{
          ft(28)
          c-9()
        }
      }
      >i{
        w(120)
        h(120)
        background-size contain
        background-repeat no-repeat
        background-position center
        &.icon-customer{
          background-image url(../../assets/images/attestation_icon_form1.png)
        }
        &.icon-staff{
          background-image url(../../assets/images/attestation_icon_form2.png)
        }
        &.icon-owner{
          background-image url(../../assets/images/attestation_icon_form3.png)
        }
        &.icon-apply{
          background-image url(../../assets/images/attestation_icon_form4.png)
        }
      }
    }
    .c-form{
      mt(30)
      li{
        pr(24)
        min-height 102px
        bg(#F6F6F6)
        border-radius 4px
        flex-center()
        mb(24)
        span{
          ft(30)
          margin 0 24px 0 36px
          word-break keep-all
          &.required{
            position relative
            &:before{
              content "*"
              position absolute
              left -24px
              top 6px
              c(#FF5638)
              ft(46)
            }
          }
        }
        input{
          h(102)
          ft(30)
          c-3()
          flex-1()
          outline none
          bg(#F6F6F6)
          &::-webkit-input-placeholder{
            c(#999)
          }
        }
        textarea{
          height 100%
          mt(36)
          mb(10)
          ft(30)
          c-3()
          flex-1()
          outline none
          border none
          bg(#F6F6F6)
          &::-webkit-textarea-placeholder{
            c(#999)
          }
        }
        .el-date-editor{
          flex-1()
        }
        .position{
          w(48)
          h(48)
          background-image url(../../assets/images/address_position_icon.png)
          background-size contain
          background-repeat no-repeat
          background-position center
        }
        .extension{
          w(16)
          h(26)
          background-image url(../../assets/images/icon-enter.png)
          background-size contain
          background-repeat no-repeat
          background-position center
        }
      }
    }
  }
  .att-bottom-btn{
    margin 64px 48px 0
    lh(88)
    text-c()
    ft(32)
    c(#fff)
    bg(#BDBDBD)
    border-radius 4px
    &.achieve{
      bg(#FF5638)
    }
  }
}


